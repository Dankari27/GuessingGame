<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<!-- Root container for the UI layout -->

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">

   <!-- UI components within the AnchorPane -->
   <children>
      <!-- Button for submitting user input -->
      <Button fx:id="submit" layoutX="241.0" layoutY="232.0" mnemonicParsing="false" onAction="#clkBtn" prefHeight="40.0" prefWidth="119.0" text="Enter" textFill="#00a5ff">
         <!-- Styling the button's font -->
         <font>
            <Font size="22.0" />
         </font>
      </Button>
      
      <!-- Text element for prompting the user -->
      <Text fx:id="prompt" layoutX="132.0" layoutY="166.0" strokeType="OUTSIDE" strokeWidth="2.0" text="Enter a number(1-100):">
         <!-- Styling the text's font -->
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Text>
      
      <!-- Text element for the title of the guessing game -->
      <Text fx:id="title" fill="#00b9ff" layoutX="163.0" layoutY="84.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Guessing Game">
         <!-- Styling the text's font -->
         <font>
            <Font size="40.0" />
         </font>
      </Text>
      
      <!-- TextField for user input -->
      <TextField fx:id="inputField" layoutX="308.0" layoutY="148.0" promptText="Type here" />
      
      <!-- Label for displaying output messages -->
      <Label fx:id="outputLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="132.0" layoutY="311.0" prefHeight="17.0" prefWidth="357.0" textFill="RED" />
   </children>
</AnchorPane>
